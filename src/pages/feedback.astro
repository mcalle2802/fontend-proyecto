---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Developer - Feedback Form">
  <section class="feedback-container">
    <h1>üìù Feedback Form</h1>
    <p>Share your thoughts and help improve the developer experience...</p>

    <form id="feedbackForm">
      <input type="text" name="name" placeholder="Your Name" required />
      <input type="email" name="email" placeholder="Your Email" required />
      <select name="category" required>
        <option value="">Feedback Category</option>
        <option value="bug">Bug Report</option>
        <option value="feature">Feature Request</option>
        <option value="improvement">Improvement Suggestion</option>
        <option value="other">Other</option>
      </select>
      <input type="text" name="message" placeholder="Your Message" required />
      <button type="submit">Submit Feedback</button> 
    </form>
    
    <div class="back-action">
      <a href="/developer" class="btn">Back to Developer Hub</a>
    </div>
  </section>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const role = localStorage.getItem("userRole");
      if (role !== "developer") {
        alert("Access denied. Only developers may submit feedback.");
        window.location.href = "/login";
      }

      const form = document.getElementById("feedbackForm");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = Object.fromEntries(new FormData(form).entries());

        try {
          // Simulate API call
          console.log('Feedback submitted:', formData);
          alert("Feedback successfully submitted!");
          form.reset();
        } catch (err) {
          console.error(err);
          alert("Connection error.");
        }
      });
    });
  </script>

  <style>
    .feedback-container {
      text-align: center;
      color: #ffae42;
      padding: 3rem 1rem;
      font-family: 'Cinzel', serif;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 400px;
      margin: 2rem auto;
    }

    input, select {
      padding: 0.8rem;
      border: 1px solid #ffae42;
      border-radius: 8px;
      background: rgba(255, 165, 0, 0.1);
      color: #ffae42;
    }

    button {
      background: rgba(255, 165, 0, 0.2);
      border: 1px solid #ffae42;
      padding: 0.8rem;
      border-radius: 8px;
      color: #ffae42;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
    }

    button:hover {
      background: rgba(255, 165, 0, 0.4);
      transform: scale(1.05);
    }

    .back-action {
      text-align: center;
      margin-top: 2rem;
    }

    .btn {
      background: rgba(255, 165, 0, 0.1);
      border: 1px solid #ffae42;
      padding: 0.8rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      color: #ffae42;
      transition: background 0.3s, transform 0.2s;
      font-family: 'Cinzel', serif;
    }

    .btn:hover {
      background: rgba(255, 165, 0, 0.3);
      transform: scale(1.05);
    }
  </style>
</BaseLayout>