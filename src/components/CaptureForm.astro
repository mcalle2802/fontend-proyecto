<form method="post" style="display:flex; flex-direction:column; gap:1rem; max-width:500px; margin:auto;">
  <h2>Registrar Nueva Víctima</h2>
  <input type="text" name="name" placeholder="Nombre del developer" required />
  <input type="text" name="skills" placeholder="Habilidades" required />
  <input type="text" name="lastSeen" placeholder="Última ubicación conocida" required />
  <select name="status">
    <option value="captured">Capturado</option>
    <option value="transforming">Transformándose</option>
    <option value="data_slave">Convertido</option>
  </select>
  <button type="submit">Guardar</button>
</form>
