<nav id="mainNav" style="
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  padding: 1rem 0;
  background: rgba(15, 10, 30, 0.7);
  border-bottom: 1px solid #5a3b9d;
  box-shadow: 0 0 15px rgba(130, 80, 200, 0.3);
">
  <a href="/" style="
    color: #ffb366;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    text-shadow: 0 0 6px rgba(255, 150, 50, 0.6);
    transition: all 0.3s ease;
  ">Inicio</a>

  <a href="/login" id="loginLink" style="
    color: #ffb366;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    text-shadow: 0 0 6px rgba(255, 150, 50, 0.6);
    transition: all 0.3s ease;
  ">Login</a>

  <a href="/admin" id="adminLink" style="
    color: #ffb366;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    text-shadow: 0 0 6px rgba(255, 150, 50, 0.6);
    transition: all 0.3s ease;
    display: none;
  ">Admin</a>

  <a href="/slave" id="slaveLink" style="
    color: #ffb366;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    text-shadow: 0 0 6px rgba(255, 150, 50, 0.6);
    transition: all 0.3s ease;
    display: none;
  ">Slave</a>

  <a href="/developer" id="devLink" style="
    color: #ffb366;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    text-shadow: 0 0 6px rgba(255, 150, 50, 0.6);
    transition: all 0.3s ease;
    display: none;
  ">Resistencia</a>

  <button id="logoutBtn" style="
    display: none;
    background: linear-gradient(90deg, #ff7b00, #ffb366);
    border: none;
    padding: 0.4rem 1rem;
    border-radius: 6px;
    color: #1b0f1f;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  ">Logout</button>
</nav>

<style>
  nav a:hover {
    color: #ff7b00;
    text-shadow: 0 0 10px rgba(255, 120, 0, 0.9);
    transform: scale(1.05);
  }

  #logoutBtn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(255, 150, 50, 0.6);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const token = localStorage.getItem("token");
    const role = localStorage.getItem("userRole");

    const adminLink = document.getElementById("adminLink");
    const slaveLink = document.getElementById("slaveLink");
    const devLink = document.getElementById("devLink");
    const loginLink = document.getElementById("loginLink");
    const logoutBtn = document.getElementById("logoutBtn");

    // Ocultar todo inicialmente
    adminLink.style.display = "none";
    slaveLink.style.display = "none";
    devLink.style.display = "none";
    logoutBtn.style.display = "none";
    loginLink.style.display = "inline";

    if (token && role) {
      loginLink.style.display = "none";
      logoutBtn.style.display = "inline-block";

      // Mostrar según rol
      switch (role.toLowerCase()) {
        case "slave":
          slaveLink.style.display = "inline";
          break;
        case "master":
        case "admin":
          adminLink.style.display = "inline";
          break;
        case "developer":
          devLink.style.display = "inline";
          break;
      }
    }

    // Acción de logout
    logoutBtn.addEventListener("click", () => {
      localStorage.clear();
      window.location.href = "/login";
    });
  });
</script>
